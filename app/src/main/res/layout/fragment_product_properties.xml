<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/propertiesGroupRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/allProperties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/primary_space"
        android:layout_marginTop="@dimen/primary_space"
        android:layout_marginEnd="@dimen/primary_space"
        android:fontFamily="@font/rotonda"
        android:textSize="16sp"
        android:text="Все характеристики"
        android:textColor="@color/bluePrimary" />

</LinearLayout>