<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/textViewBlockOpisanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1dp"
        android:textAllCaps="false"
        android:textColor="@color/text_gray"
        android:textSize="16sp"
        app:fontFamily="@font/rotondac"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/buttonBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_button_transp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:backgroundTint="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rotondac"
        android:textColor="@color/white"
        android:layout_below="@id/textViewBlockOpisanie"
        android:textAllCaps="false"/>

</RelativeLayout>