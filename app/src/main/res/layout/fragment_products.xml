<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_16">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/space_16"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/blackTextPrimary"
            tools:ignore="ContentDescription" />

        <include
            android:id="@+id/searchContainer"
            layout="@layout/view_search" />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/searchToolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <LinearLayout
                android:id="@+id/hiddenHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="enterAlways|scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/space_16"
                    android:paddingEnd="@dimen/space_16"
                    android:paddingBottom="@dimen/space_8"
                    android:paddingTop="@dimen/space_8"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/space_16">

                        <TextView
                            android:id="@+id/categoryName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rotonda_normal"
                            android:maxLines="1"
                            android:textColor="@color/blackTextPrimary"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            tools:text="Возьми на природу" />

                        <TextView
                            android:id="@+id/productAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rotonda_normal"
                            android:maxLines="1"
                            android:textColor="@color/blackTextLight"
                            tools:layout_editor_absoluteX="16dp"
                            tools:text="452 товара" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/png_share"
                        app:tint="@color/blackTextPrimary"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/brandTabsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/space_8"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/additionalName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda_normal"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:textColor="@color/blackTextPrimary"
                        android:paddingStart="@dimen/space_16"
                        android:paddingEnd="@dimen/space_16"
                        android:textStyle="bold"
                        tools:text="Популярные бренды" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/brandRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/changeCategoryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/categoryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginEnd="@dimen/space_16"
                        android:layout_marginBottom="@dimen/space_8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/png_ic_categories"
                                app:tint="@color/blackTextLight"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_8"
                                android:layout_weight="1"
                                android:fontFamily="@font/rotonda_normal"
                                android:maxLines="1"
                                android:textColor="@color/blackTextPrimary"
                                android:textSize="17sp"
                                android:text="Категории"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/categoryName" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/ic_pointer_right"
                                app:tint="@color/blackTextLight"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/space_16"
                android:paddingEnd="@dimen/space_16"
                android:paddingTop="@dimen/space_8"
                android:paddingBottom="@dimen/space_8"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/viewMode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/png_table"
                    app:tint="@color/blackTextPrimary"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/rotonda_normal"
                    android:textColor="@color/blackTextPrimary"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Выбрать сортировку"
                    tools:ignore="UseCompatTextViewDrawableXml" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_filter"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        app:tint="@color/blackTextPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/filterAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bkg_filters_number"
                        android:fontFamily="@font/rotonda_normal"
                        android:paddingStart="5dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="3"/>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
