<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/searchWordContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdBetweenCategoryAndBrand2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:dividerColor="@color/divider_gray_color" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextViewHeaderBlackBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ищут по запросам"
        android:paddingVertical="@dimen/space_8"
        android:paddingHorizontal="@dimen/space_16"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchWords"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdBetweenCategoryAndBrand3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:dividerColor="@color/divider_gray_color" />

</LinearLayout>