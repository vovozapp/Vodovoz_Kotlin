<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/stepImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription"
        app:tint="@color/bluePrimary"/>

    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rotonda"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blackTextDark"
        android:paddingStart="64dp"
        android:paddingEnd="64dp"
        android:paddingTop="@dimen/primary_space"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:text="Корзина пуста" />

    <TextView
        android:id="@+id/stepDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rotonda"
        android:textSize="14sp"
        android:textColor="@color/blackTextPrimary"
        android:paddingStart="64dp"
        android:paddingEnd="64dp"
        android:paddingTop="4dp"
        android:gravity="center"
        android:text="Положите товар в корзину чтобы его купить" />


</LinearLayout>