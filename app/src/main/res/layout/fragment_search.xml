<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingStart="@dimen/primary_space"
        android:paddingEnd="@dimen/primary_space"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginEnd="@dimen/primary_space"
            app:tint="@color/blackTextPrimary"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/background_rectangle_light_gray"
            android:paddingEnd="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_margin"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search"
                app:tint="@color/blackTextPrimary"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/search_hint"
                android:background="@null"
                android:padding="5dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="@dimen/primary_space"
                android:textSize="@dimen/normal_text_size"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <ImageView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle"
                android:padding="5dp"
                android:visibility="visible"
                app:tint="@color/blackTextPrimary"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyResultContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/searchToolbar"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rotonda"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blackTextDark"
            android:paddingBottom="4dp"
            android:text="Ничего не найдено" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rotonda"
            android:textSize="14sp"
            android:textColor="@color/blackTextPrimary"
            android:paddingTop="4dp"
            android:text="Попробуйте изменить параметры фильтров" />



    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/productsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_below="@id/searchToolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <LinearLayout
                android:id="@+id/hiddenHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="enterAlways|scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/primary_space"
                    android:paddingEnd="@dimen/primary_space"
                    android:paddingBottom="@dimen/primary_margin"
                    android:paddingTop="@dimen/primary_margin"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/primary_space">

                        <TextView
                            android:id="@+id/categoryName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rotonda"
                            android:maxLines="1"
                            android:textColor="@color/blackTextPrimary"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            tools:text="Возьми на природу" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_share"
                        app:tint="@color/blackTextPrimary"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/viewMode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_table"
                    app:tint="@color/blackTextPrimary"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/rotonda"
                    android:textColor="@color/blackTextPrimary"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:text="Выбрать сортировку"
                    tools:ignore="UseCompatTextViewDrawableXml" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/categories"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_categories"
                    app:tint="@color/blackTextPrimary"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/searchDataContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchToolbar"
        android:visibility="visible"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/historyQueryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rotonda"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="История"
                    android:textColor="@color/blackTextDark"
                    android:paddingTop="@dimen/primary_margin"
                    android:paddingBottom="@dimen/primary_margin"
                    android:paddingStart="@dimen/primary_space"
                    android:paddingEnd="@dimen/primary_space" />

                <TextView
                    android:id="@+id/clearSearchHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/primary_margin"
                    android:paddingBottom="@dimen/primary_margin"
                    android:paddingStart="@dimen/primary_space"
                    android:paddingEnd="@dimen/primary_space"
                    android:fontFamily="@font/rotonda"
                    android:textColor="@color/blackTextDark"
                    android:textSize="14sp"
                    android:text="Очистить" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/historyQueryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularQueryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rotonda"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Популярное"
                android:textColor="@color/blackTextDark"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/popularQueryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/popularProductsSliderFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
