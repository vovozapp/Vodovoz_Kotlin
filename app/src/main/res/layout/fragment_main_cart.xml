<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDark"
    tools:context=".ui.components.fragment.cart.CartFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:title="Корзина"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/emptyCartContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/primary_margin"
            android:background="@color/white"
            android:translationZ="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_cart"
                app:tint="@color/bluePrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rotonda"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blackTextPrimary"
                android:padding="@dimen/primary_margin"
                android:text="Корзина пуста" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rotonda"
                android:textSize="14sp"
                android:textColor="@color/blackTextLight"
                android:padding="@dimen/primary_margin"
                android:text="Положите товар в корзину чтобы его купить" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/goToCatalog"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_button_primary"
                android:layout_margin="@dimen/primary_space"
                android:fontFamily="@font/rotonda"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Перейти к покупкам"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bestForYouProductSliderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primary_margin"
            android:translationZ="1dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cartContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/cartScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttonsContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/giftMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/primary_space"
                    android:background="@color/white"
                    android:fontFamily="@font/rotonda"
                    android:textSize="16sp"
                    android:textColor="@color/blackTextPrimary"
                    tools:text="Для получения более интересного подарка осталось 984 Р" />

                <LinearLayout
                    android:id="@+id/notAvailableProductsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/primary_margin"
                        android:fontFamily="@font/rotonda"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:text="Нет в наличии"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_margin"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/notAvailableProductRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/primary_margin"
                        android:layout_marginBottom="@dimen/primary_margin"
                        android:background="@color/white"
                        android:translationZ="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/availableProductsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_margin"
                        android:text="Товары в корзине"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/availableProductRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/primary_margin"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/isReturnBottlesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginBottom="@dimen/primary_margin"
                        android:translationZ="1dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/blackTextPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="@dimen/primary_space"
                            android:fontFamily="@font/rotonda"
                            android:text="Будете ли вы возвращать пустые бутылки?" />

                        <CheckBox
                            android:id="@+id/isReturnBottles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/totalContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_margin"
                        android:text="Промокод"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/primary_margin"
                        android:padding="@dimen/primary_space"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Введите промокод"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textColor="@color/blackTextLight"
                            android:background="@null"/>

                        <TextView
                            android:id="@+id/applyPromoCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Применить"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textColor="@color/bluePrimary"
                            android:background="@null"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda"
                        android:padding="@dimen/primary_space"
                        android:text="Стоимость без учета доставки"
                        android:textColor="@color/blackTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/primary_space"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:paddingBottom="@dimen/primary_margin"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Стоимость товаров"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1135 Р"
                            android:fontFamily="@font/rotonda"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_margin"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Залог"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/productsTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1135 Р"
                            android:fontFamily="@font/rotonda"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_margin"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Скидка по акциям"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1135 Р"
                            android:fontFamily="@font/rotonda"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/primary_margin"
                        android:paddingBottom="@dimen/primary_space"
                        android:paddingStart="@dimen/primary_space"
                        android:paddingEnd="@dimen/primary_space"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Скидка по акциям"
                            android:fontFamily="@font/rotonda"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1135 Р"
                            android:fontFamily="@font/rotonda"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blackTextPrimary"
                            android:background="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:padding="@dimen/primary_margin"
            android:translationZ="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/showGifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_pointer_top"
                    app:tint="@color/green"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/rotonda"
                    android:gravity="center"
                    android:text="Ваши подарки"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/primary_space"
                    android:paddingEnd="@dimen/primary_space"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_pointer_top"
                    app:tint="@color/green"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/regOrder"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/primary_margin"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rotonda"
                    android:gravity="center"
                    android:text="Оформить заказ на 3014 Р"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>