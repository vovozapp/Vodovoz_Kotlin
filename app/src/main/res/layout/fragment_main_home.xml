<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.components.fragment.home.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:paddingBottom="@dimen/primary_margin"
                android:paddingTop="@dimen/primary_margin">

                <include layout="@layout/view_search" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/mainBannersFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/historiesFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.fragment.historySlider.HistorySliderFragment"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/popularFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.fragment.popularSlider.PopularSliderFragment"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/discountFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/secondaryBannersFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/topProductSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/orderSliderFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/fragment_section_additional_navigation" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/noveltiesFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/promotionSliderFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/bottomProductSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/brandsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.fragment.brandSlider.BrandSliderFragment"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/countriesFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.fragment.countrySlider.CountrySliderFragment"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/viewedProductSliderFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/bluePrimary"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/commentsSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.fragment.commentSlider.CommentSliderFragment"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/additionalInfoFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.vodovoz.app.ui.components.adapter.homeBottomInfo.AdditionalInfoSectionFragment"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/loadContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <ProgressBar
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_label"
                android:textColor="@color/blackTextPrimary"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loadErrorContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/blackTextPrimary" />

            <TextView
                android:id="@+id/update"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/background_button_primary"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:translationZ="1dp"
                android:layout_marginTop="20dp"
                android:text="@string/update_label" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>