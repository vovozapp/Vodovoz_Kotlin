<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bluePrimary"
                android:padding="@dimen/primary_space">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.20">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/primary_space"
                    android:paddingEnd="@dimen/primary_space"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView"
                    app:layout_constraintStart_toEndOf="@+id/cardView"
                    app:layout_constraintTop_toTopOf="@+id/cardView">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="Вадим Радько" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/rotonda"
                        android:text="Мои данные"
                        android:textColor="@color/white" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardView"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteDark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Адреса"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Стоимость доставки"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Покупки"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="История заказов"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Прошлые покупки"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Услуги"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Ремонт кулеров"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Озонация клеров"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Личная информация"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Анкета"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Активация скидочной карты"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Акции и подписки"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Настройки уведомлений"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Популярные вопросы"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="О доставке"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Оп оплате"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Онлайн чат"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="О приложении"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="О приложении"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/red"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/whiteDark"
                android:paddingStart="@dimen/primary_space"
                android:paddingEnd="@dimen/primary_space"
                android:text="Выйти из аккаунта"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/noLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/large_avatar"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/title"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rotonda"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/blackTextPrimary"
            android:text="Вы не авторизованы"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rotonda"
            android:layout_centerInParent="true"
            android:textColor="@color/blackTextLight"
            android:gravity="center"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/primary_margin"
            android:text="Войти под своим аккаунтом или\n зарегистрируйтесь"/>

        <TextView
            android:id="@+id/loginOrRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/primary_space"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/primary_space"
            android:layout_marginBottom="@dimen/primary_space"
            android:background="@drawable/background_button_primary"
            android:fontFamily="@font/rotonda"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Войти или зарегистрироваться"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>

