<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.cart.CartFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/emptyFavoriteContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:visibility="gone"
        tools:context=".feature.cart.CartFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarSimple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextAppearance="@style/ToolbarTitle"
                app:title="Прошлые покупки"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshEmptyFavoriteContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/space_8"
                    android:background="@color/white"
                    android:translationZ="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda_normal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blackTextDark"
                        android:padding="@dimen/space_8"
                        android:text="В списке нет товаров" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rotonda_normal"
                        android:textSize="14sp"
                        android:textColor="@color/blackTextPrimary"
                        android:paddingTop="@dimen/space_8"
                        android:paddingBottom="@dimen/space_8"
                        android:paddingStart="@dimen/space_16"
                        android:paddingEnd="@dimen/space_16"
                        android:text="Добавляйте понравившиейся вам продукты в избранное" />

                </LinearLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/bestForYouRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/white"
                    android:translationZ="@dimen/elevation_3"/>

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/llFavoriteContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <include
            android:id="@+id/incAppBar"
            layout="@layout/app_bar_search_open" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/searchToolbar">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/abAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:elevation="0dp">

                <LinearLayout
                    android:id="@+id/llHiddenHeaderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="enterAlways|scroll">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/space_4"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/space_16"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imgShare"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCategoryName"
                                style="@style/TextViewLargeBlackBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:maxLines="1"
                                tools:text="Прошлые покупки" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvProductAmount"
                                style="@style/TextViewNormalGray"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                tools:layout_editor_absoluteX="16dp"
                                tools:text="452 товара" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgShare"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/png_share"
                            android:layout_marginEnd="@dimen/space_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/text_black"
                            tools:ignore="ContentDescription" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/clAvailableContainer"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bkg_rectangle_light_gray"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/space_8"
                            android:layout_marginBottom="@dimen/space_8"
                            android:layout_marginStart="@dimen/space_16"
                            android:layout_marginEnd="@dimen/space_16">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cwAvailableButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/space_2"
                                app:cardElevation="@dimen/elevation_1">

                                <TextView
                                    android:id="@+id/tvAvailableTitle"
                                    style="@style/TextViewSmallBlack"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    tools:text="В наличии (3)"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cwNotAvailableButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/space_2"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/light_gray">

                                <TextView
                                    android:id="@+id/tvNotAvailableTitle"
                                    style="@style/TextViewSmallBlack"                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    tools:text="Нет в наличии (3)"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoriesRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sortContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgViewMode"
                        android:layout_width="@dimen/action_image_size_with_padding_8"
                        android:layout_height="@dimen/action_image_size_with_padding_8"
                        android:paddingHorizontal="@dimen/space_8"
                        android:paddingVertical="@dimen/space_10"
                        android:src="@drawable/png_table"
                        android:layout_marginStart="@dimen/space_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/text_black"
                        tools:ignore="ContentDescription" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSort"
                        style="@style/TextViewNormalBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableEnd="@drawable/ic_drop_down"
                        android:gravity="center"
                        android:text="Выбрать сортировку"
                        android:drawableTint="@color/text_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imgCategories"
                        app:layout_constraintStart_toEndOf="@+id/imgViewMode"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCategories"
                        android:layout_width="@dimen/action_image_size_with_padding_8"
                        android:layout_height="@dimen/action_image_size_with_padding_8"
                        android:paddingHorizontal="@dimen/space_8"
                        android:paddingVertical="@dimen/space_10"
                        android:src="@drawable/png_ic_categories"
                        app:tint="@color/text_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</RelativeLayout>