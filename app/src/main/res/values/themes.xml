<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Vodovoz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="Tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/rotonda_normal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@drawable/selector_input_layout_box_stroke</item>
        <item name="boxStrokeColor">@drawable/selector_input_layout_box_stroke</item>
        <item name="startIconTint">@drawable/selector_input_layout_box_stroke</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
    </style>

    <style name="TextField">
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="android:textColor">@color/blackTextPrimary</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="FullScreenDialogWithoutStatusBar" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MapDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    //New style
    //Toolbar
    <style name="ToolbarTitle" >
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ToolbarSubtitle" >
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    //Normal
    <style name="TextViewNormalBlack" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/rotonda_normal</item>
    </style>

    <style name="TextViewNormalGray" parent="@style/TextViewNormalBlack">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="EditTextViewNormalGray" parent="@style/TextViewNormalBlack">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textCursorDrawable">@drawable/bkg_cursor_blue_primary</item>
    </style>

    <style name="TextViewNormalBlue" parent="@style/TextViewNormalBlack">
        <item name="android:textColor">@color/bluePrimary</item>
    </style>

    <style name="TextViewNormalBlackBold" parent="@style/TextViewNormalBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewNormalBlackExtraBold" parent="@style/Theme.AppCompat">
        <item name="fontFamily">@font/rotonda_bold</item>
    </style>

    //Medium
    <style name="TextViewMediumBlack" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/rotonda_normal</item>
    </style>

    <style name="TextViewMediumGray" parent="@style/TextViewMediumBlack">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextViewMediumBlueBold" parent="@style/TextViewMediumBlack">
        <item name="android:textColor">@color/bluePrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMediumWhite" parent="@style/TextViewMediumBlack">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewMediumBlackExtraBold" parent="@style/TextViewMediumBlack">
        <item name="fontFamily">@font/rotonda_bold</item>
    </style>

    <style name="TextViewMediumGrayExtraBold" parent="@style/TextViewMediumBlack">
        <item name="fontFamily">@font/rotonda_bold</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextViewMediumBlackBold" parent="@style/TextViewMediumBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMediumGrayBold" parent="@style/TextViewMediumBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    //Header
    <style name="TextViewHeaderBlack" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/rotonda_normal</item>
    </style>

    //Search
    <style name="EditTextSearch" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

    //Button
    <style name="BaseButton" parent="@style/Theme.AppCompat">
        <item name="android:fontFamily">@font/rotonda_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BlueButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/selector_bkg_button_blue_rect</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/selector_bkg_button_green_rect</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GrayButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/bkg_button_green_circle_disabled</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //BottomSheet
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bkg_bs</item>
    </style>

    //Switch
    <style name="SwitchBlue" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="colorAccent">@color/bluePrimary</item>
    </style>
</resources>