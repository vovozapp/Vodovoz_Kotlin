<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/primary_space"
    android:paddingBottom="@dimen/primary_space">

    <TextView
        android:id="@+id/popularSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/normal_text_size"
        android:padding="@dimen/primary_space"
        android:gravity="center_vertical"
        android:text="По популярности" />

    <TextView
        android:id="@+id/alphabeticallySort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/normal_text_size"
        android:padding="@dimen/primary_space"
        android:gravity="center_vertical"
        android:text="По алфавиту" />

    <TextView
        android:id="@+id/increasePriceSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/normal_text_size"
        android:padding="@dimen/primary_space"
        android:gravity="center_vertical"
        android:text="По возростанию цены" />

    <TextView
        android:id="@+id/reducePriceSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/normal_text_size"
        android:padding="@dimen/primary_space"
        android:gravity="center_vertical"
        android:text="По убыванию цены" />

</LinearLayout>