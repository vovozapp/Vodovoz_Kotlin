<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/primary_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rotonda"
        android:padding="@dimen/primary_space"
        android:text="Начните свою реальную историю!"
        android:textColor="@color/blackTextDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/primary_margin"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/detailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rotonda"
        android:textSize="16sp"
        android:paddingStart="@dimen/primary_space"
        android:paddingEnd="@dimen/primary_space"
        android:paddingTop="@dimen/primary_space"
        android:paddingBottom="@dimen/primary_margin"
        android:text="какой-то текст"
        app:layout_constraintTop_toBottomOf="@+id/detailPicture" />

    <TextView
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/primary_margin"
        android:background="@drawable/background_button_green"
        android:fontFamily="@font/rotonda"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Подробнее"
        android:textSize="16sp"
        android:gravity="center"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailText"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>