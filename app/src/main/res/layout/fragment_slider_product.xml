<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/topMargin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/primary_margin"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/singleTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primary_bold"
            android:textSize="@dimen/title_text_size"
            android:text="@string/popular_label"
            android:paddingTop="@dimen/primary_margin"
            android:paddingBottom="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space" />

        <TextView
            android:id="@+id/showAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/primary_normal"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/bluePrimary"
            android:gravity="center"
            android:text="@string/show_all"
            android:paddingTop="@dimen/primary_margin"
            android:paddingBottom="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/categoryTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:tabMode="scrollable"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingBottom="0dp"
        app:tabPaddingTop="0dp"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/Tab"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/bottomMargin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/primary_margin"
        android:visibility="visible"/>

</LinearLayout>