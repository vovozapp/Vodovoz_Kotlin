<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Vodovoz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/new_product_blue</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="colorControlActivated">@color/new_product_blue</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bluePrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.Vodovoz</item>
    </style>

    <style name="Theme.Vodovoz.DarkStatusBar" parent="Theme.Vodovoz">

        <item name="colorPrimaryDark">@color/bluePrimary</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/TextViewNormalBlack</item>
    </style>
</resources>