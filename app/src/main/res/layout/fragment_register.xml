<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Регистрация"
            app:titleTextAppearance="@style/ToolbarTitle"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:id="@+id/firstNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                android:layout_marginTop="@dimen/primary_margin"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextField"
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия*" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:id="@+id/secondNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextField"
                    android:id="@+id/secondName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Имя Отчество*" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:id="@+id/emailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextField"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Почта*" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:id="@+id/phoneContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextField"
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Телефон*" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:id="@+id/passwordContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/TextField"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Пароль*" />

            </com.google.android.material.textfield.TextInputLayout>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подтверждаю согласие на обработку персональных данных"
                android:checked="true"
                android:fontFamily="@font/rotonda"
                android:textStyle="bold"
                android:textColor="@color/blackTextPrimary"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                android:layout_marginTop="@dimen/primary_margin"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подписаться на рассылку"
                android:checked="true"
                android:fontFamily="@font/rotonda"
                android:textStyle="bold"
                android:textColor="@color/blackTextPrimary"
                android:layout_marginStart="@dimen/primary_space"
                android:layout_marginEnd="@dimen/primary_space"
                android:layout_marginTop="@dimen/primary_space"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="1dp">

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/primary_space"
            android:layout_marginTop="@dimen/primary_space"
            android:layout_marginEnd="@dimen/primary_space"
            android:layout_marginBottom="@dimen/primary_space"
            android:background="@drawable/background_button_primary"
            android:gravity="center"
            android:fontFamily="@font/rotonda"
            android:textStyle="bold"
            android:text="Зарегистрироваться"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:translationZ="1dp" />

    </RelativeLayout>

</LinearLayout>