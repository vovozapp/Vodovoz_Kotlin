<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/serviceName"
                style="@style/ToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center"
                android:drawablePadding="4dp"
                tools:text="Название услуги"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:id="@+id/scrollableContentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/primary_space"
                android:textSize="16sp"
                android:fontFamily="@font/rotonda"
                android:textColor="@color/blackTextPrimary"
                android:paddingBottom="77dp"
                tools:text="Detail text"/>

        </ScrollView>

        <TextView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/primary_space"
            android:layout_marginTop="@dimen/primary_space"
            android:layout_marginEnd="@dimen/primary_space"
            android:layout_marginBottom="@dimen/primary_space"
            android:background="@drawable/background_button_primary"
            android:fontFamily="@font/rotonda"
            android:gravity="center"
            android:text="Заказать услугу"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>