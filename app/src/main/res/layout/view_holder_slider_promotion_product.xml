<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/favoriteStatus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/png_ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/allStatusContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/favoriteStatus"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/favoriteStatus">

        <androidx.cardview.widget.CardView
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/bluePrimary"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/rotonda_normal"
                android:gravity="center"
                android:paddingStart="@dimen/space_8"
                android:paddingEnd="@dimen/space_8"
                android:text="@string/not_available"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/space"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/discountContainer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/rotonda_normal"
                android:gravity="center"
                android:paddingStart="@dimen/space_8"
                android:paddingEnd="@dimen/space_8"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        style="@style/TextViewNormalBlack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/space_8"
        android:maxLines="3"
        app:layout_constraintBottom_toTopOf="@+id/amountControllerContainer"
        app:layout_constraintEnd_toStartOf="@+id/favoriteStatus"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/allStatusContainer"
        tools:text="Батон Пекарня Утконос и Настоящий хлеб нарезной 170 г" />

    <TextView
        android:id="@+id/price"
        style="@style/TextViewMediumBlackExtraBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name"
        tools:text="99,00 Р" />

    <TextView
        android:id="@+id/oldPrice"
        style="@style/TextViewNormalGrayBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price"
        tools:text="105,00 Р" />


    <RelativeLayout
        android:id="@+id/amountControllerContainer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/amountController"
            layout="@layout/view_product_amount_controller" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>