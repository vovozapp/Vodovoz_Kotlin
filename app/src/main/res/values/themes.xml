<resources>

    <style name="Theme.Vodovoz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/accentPrimary</item>
        <item name="colorControlActivated">@color/accentPrimary</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="android:statusBarColor">@color/bluePrimary</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bluePrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.Vodovoz</item>
    </style>

    <style name="Theme.Vodovoz.DarkStatusBar" parent="Theme.Vodovoz">

    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="RoundedImageCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/TextViewNormalBlack</item>
    </style>

    <style name="Tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_text_menu_tab</item>
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:background">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/rotonda_normal</item>
    </style>

    <style name="TextInputAddress" parent="TextInputLayout">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="TextField">
        <item name="fontFamily">@font/rotonda_normal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="FullScreenDialogWithoutStatusBar" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MapDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
