<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/primary_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blackTextDark"
            android:text="Отзывы"
            android:paddingTop="@dimen/primary_margin"
            android:paddingBottom="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space"/>

        <TextView
            android:id="@+id/sendComment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/primary_normal"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/bluePrimary"
            android:gravity="center"
            android:text="Написать отзыв"
            android:paddingTop="@dimen/primary_margin"
            android:paddingBottom="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/commentsPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>