<?xml version="1.0" encoding="utf-8"?>
<!--new-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSendComment"
        android:id="@+id/tvName"
        style="@style/TextViewMediumBlackBold"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="@string/comments_slider_title"
        android:paddingVertical="@dimen/space_8"
        android:paddingHorizontal="@dimen/space_16"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvName"
        android:id="@+id/tvSendComment"
        style="@style/TextViewSmallBlue"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="match_parent"
        android:gravity="end"
        android:text="@string/write_comment_btn_text"
        android:paddingVertical="@dimen/space_8"
        android:paddingHorizontal="@dimen/space_16" />

    <androidx.viewpager2.widget.ViewPager2
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/vpComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>