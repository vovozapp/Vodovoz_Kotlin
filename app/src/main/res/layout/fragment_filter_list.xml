<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:title="Фильтр" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space"
            android:fontFamily="@font/rotonda_bold"
            android:textColor="@color/blackTextPrimary"
            android:textSize="17sp"
            android:text="Цена"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space"
            android:layout_marginTop="@dimen/primary_space">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/background_rectangle_light_gray"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:layout_marginEnd="@dimen/primary_margin"
                android:paddingStart="@dimen/primary_margin"
                android:paddingEnd="@dimen/primary_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rotonda"
                    android:textSize="17sp"
                    android:textColor="@color/blackTextLight"
                    android:text="От"/>

                <TextView
                    android:id="@+id/minPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rotonda_bold"
                    android:textSize="17sp"
                    android:textColor="@color/blackTextPrimary"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:text="50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/background_rectangle_light_gray"
                android:paddingTop="@dimen/primary_margin"
                android:paddingBottom="@dimen/primary_margin"
                android:layout_marginStart="@dimen/primary_margin"
                android:paddingStart="@dimen/primary_margin"
                android:paddingEnd="@dimen/primary_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rotonda"
                    android:textSize="17sp"
                    android:textColor="@color/blackTextLight"
                    android:text="До"/>

                <TextView
                    android:id="@+id/maxPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rotonda_bold"
                    android:textSize="17sp"
                    android:textColor="@color/blackTextPrimary"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:text="10000"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/priceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="10000"
            android:layout_marginEnd="@dimen/primary_space"
            android:layout_marginStart="@dimen/primary_space"
            app:labelBehavior="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filterRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:gravity="center"
                android:fontFamily="@font/rotonda"
                android:textSize="17sp"
                android:text="Сброисть"/>

            <TextView
                android:id="@+id/apply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:fontFamily="@font/rotonda"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="Применить"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>