<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwImageContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="500dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.13">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgAuthorPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/png_default_avatar"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/space_16"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cwImageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cwImageContainer"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAuthor"
            style="@style/TextViewNormalBlackBold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageContainer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Имя" />

        <TextView
            android:id="@+id/date"
            style="@style/TextViewSmallGray"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageContainer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Дата" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImages"
        android:layout_width="match_parent"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eeeeee"
        tools:itemCount="4"
        tools:listitem="@layout/item_comment_image"
        app:layout_constraintStart_toEndOf="@+id/cwImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/cwImageContainer"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComment"
        style="@style/TextViewSmallLightGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="@dimen/space_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/rvImages"
        app:layout_constraintTop_toBottomOf="@+id/rvImages"
        tools:text="Текст комментария" />


</androidx.constraintlayout.widget.ConstraintLayout>