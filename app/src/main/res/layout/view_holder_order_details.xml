<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/primary_space"
            android:layout_marginTop="@dimen/primary_space"
            android:src="@drawable/ic_order_accepted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primary_space"
            android:drawablePadding="4dp"
            android:textColor="@color/bluePrimary"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/primary_margin"
            app:layout_constraintStart_toEndOf="@+id/statusImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Заказ отменен" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rotonda"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blackTextDark"
            android:layout_marginEnd="@dimen/primary_space"
            android:layout_marginTop="@dimen/primary_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15476 Р" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primary_margin"
            android:paddingStart="@dimen/primary_space"
            android:paddingEnd="@dimen/primary_space"
            android:fontFamily="@font/rotonda"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@color/blackTextPrimary"
            app:layout_constraintTop_toBottomOf="@+id/status"
            tools:layout_editor_absoluteX="16dp"
            tools:text="Г Балашиха Проспект Ленина дом 32 д кв 313, нидекс 456342, подъезд 5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsDetailPicturesRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/primary_space"
            app:layout_constraintDimensionRatio="w,1:4.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/repeatOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/repeatOrder" />

        <TextView
            android:id="@+id/repeatOrder"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="@color/bluePrimary"
            android:textSize="16sp"
            android:fontFamily="@font/rotonda"
            android:text="Повторить"
            android:layout_marginTop="@dimen/primary_space"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productsDetailPicturesRecycler" />

        <TextView
            android:id="@+id/moreDetails"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:fontFamily="@font/rotonda"
            android:gravity="center"
            android:text="Подробнее"
            android:textColor="@color/bluePrimary"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/primary_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/productsDetailPicturesRecycler" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>